{% schema %}
{
  "name": "First section",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "image_width",
      "options": [
        {
          "value": "third",
          "label": "First section.settings.image_width.options__1.label"
        },
        {
          "value": "half",
          "label": "First section.settings.image_width.options__2.label"
        },
        {
          "value": "full",
          "label": "First section.settings.image_width.options__3.label"
        }
      ],
      "default": "full",
      "label": "First section.settings.image_width.label"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "First section.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "First section.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "First section.settings.image_ratio.options__3.label"
        },
        {
          "value": "circle",
          "label": "First section.settings.image_ratio.options__4.label"
        }
      ],
      "default": "adapt",
      "label": "First section.settings.image_ratio.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 2,
      "step": 1,
      "default": 2,
      "label": "First section.settings.columns_desktop.label"
    },
    {
      "type": "select",
      "id": "column_alignment",
      "options": [
        {
          "value": "left",
          "label": "First section.settings.column_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "First section.settings.column_alignment.options__2.label"
        }
      ],
      "default": "center",
      "label": "First section.settings.column_alignment.label"
    },
    {
      "type": "select",
      "id": "background_style",
      "options": [
        {
          "value": "none",
          "label": "First section.settings.background_style.options__1.label"
        },
        {
          "value": "primary",
          "label": "First section.settings.background_style.options__2.label"
        }
      ],
      "default": "primary",
      "label": "First section.settings.background_style.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "First section.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "First section.settings.header_mobile.content"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "First section.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "First section.settings.columns_mobile.options__2.label"
        }
      ],
      "default": "1",
      "label": "First section.settings.columns_mobile.label"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "First section.settings.swipe_on_mobile.label"
    },
    {
      "type": "header",
      "content": "First section.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "First section.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "First section.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "First section.multicolumn.blocks.column.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "First section.blocks.column.settings.image.label"
        },
        {
          "type": "inline_richtext",
          "id": "Pre heading",
          "default": "Column",
          "label": "First section.blocks.column.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "First section.blocks.column.settings.text.label"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "First section.blocks.column.settings.link_label.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "First section.blocks.column.settings.link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "First section.presets.name",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}