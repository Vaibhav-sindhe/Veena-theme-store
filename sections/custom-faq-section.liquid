{{ 'custom-faq.css' | asset_url | stylesheet_tag }}

<div class="custom-faq">
    <h1 class="custom-faq--heading">{{ section.settings.heading }}</h1>
    <div class="custom-faq--container">
        {% for block in section.blocks %}
                <div class="custom-faq-container--block">
                <details>
                    <summary><div class="custom-faq-container-block--question"><h5>{{ block.settings.question }}</h5><span class="toggle-icon">+</span></div></summary>
                    <div class="custom-faq-container-block--answer">{{ block.settings.answer }}</div>
                </details>
            </div>
        {% endfor %}   

    </div>    
</div> 


<script>
    let summaries = document.querySelectorAll('details summary');
    let previous=null;
    let previousIcon=null;
    let i=0;
    summaries.forEach(function(summary) {
        summary.addEventListener('click', function() {
            var icon = summary.querySelector('.toggle-icon');


            if(previous==summary.parentNode){
                previous.open=previous.open;
            }
            else{
                if(previous){
                    previous.open=false;
                    previousIcon.textContent="+"
                }
                previous=summary.parentNode;
                previousIcon=icon;
            }
            if (summary.parentNode.open) {
                icon.textContent = '+';
            } else {
                icon.textContent = '-';
            }
        });
    });
</script>

{% schema %}
{
  "name": "custom-faq section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FAQ"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Description"
      }    

  ],
  "blocks": [
    {
      "type": "assignment-faq-block",
      "name": "assignment-faq-block",
      "settings": [
        {
           "type": "text",
           "id": "question",
           "label": "question",
           "default": "Business Formal Choices"
          },
          {
           "type": "richtext",
           "id": "answer",
           "label": "answer",
           "default": "<p>Yes Business Formal Choices</p>"
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "custom-faq section"
    }
  ]
}
{% endschema %}