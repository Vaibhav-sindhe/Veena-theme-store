<style>
    {% for block in section.blocks %}
      .custom .color-swatch--{{ block.settings.title | handleize }}{
        background:{{ block.settings.solid_color }};
      }
    {% endfor %}
  </style>
{% schema %}
{
    "name":"Swatches",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        }
    ],
    "blocks": [
        {
            "name":"solid color",
            "type": "solid-color",
            "settings": [
                {
                    "type": "text",
                    "id": "solid_color_name",
                    "label": "Solid color name"
                },
                {
                    "type": "color",
                    "id": "solid_color",
                    "label": "Solid color"
                },
                {
                    "type": "text",
                    "id": "gradient_color_name",
                    "label": "Gradient color name"
                },
                {
                    "type": "color",
                    "id": "gradient_color",
                    "label": "Gradient color"
                }
            ]
        }
    ],
    "presets": [
        {
          "name": "Swatches"
        }
      ]
}
{% endschema %}