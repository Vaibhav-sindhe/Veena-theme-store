{% schema %}
{
  "name": "usp section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Business Formal Choices"
    }
  ],
  "blocks": [
    {
      "type": "custom-block",
      "name": "custom-block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop image",
          "info": "Recommended dimensions: 1440 x 600"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile image",
          "info": "Recommended dimensions: 600 x 400"
        },
        {
          "type": "text",
          "id": "pre_heading",
          "label": "Pre Heading",
          "default": "Business Formal Choices"
        },
        {
          "type": "richtext",
          "id": "title",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Explore"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "usp Section"
    }
  ]
}
{% endschema %}