<div class="usp-section" page-width {{ section.settings.image_position }}>
    <div class="usp-section--container">
        {%for block in section.blocks %}
            <div class="usp-section--block">
                <div class="usp-section-block--img-container">
                    {% render 'responsive-picture',
                        desktopImage: block.settings.image_desktop,
                        mobileImage: block.settings.image_mobile
                    %}
                </div>
                <div class="usp-section-block--content">
                    <div>{{ block.settings.heading }}</div>
                    <div><p>{{ block.settings.description }}</p></div>
                    {% if block.settings.button_label!=blank%} <div><a class="button" href="{{ block.settings.button_link }}">{{ block.settings.button_label }}</a></div>{% endif %}
                </div>
            </div>
        {% endfor %}
    </div>    
</div>


{% schema %}
{
  "name": "usp section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Business Formal Choices"
    }
  ],
  "blocks": [
    {
      "type": "usp-block",
      "name": "usp-block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop image",
          "info": "Recommended dimensions: 1440 x 600"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile image",
          "info": "Recommended dimensions: 600 x 400"
        },
        {
           "type": "text",
           "id": "heading",
           "label": "Heading",
           "default": "Business Formal Choices"
          },
          {
           "type": "richtext",
           "id": "description",
           "label": "Description",
           "default": "<p>Business Formal Choices</p>"
          },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Explore"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "usp Section"
    }
  ]
}
{% endschema %}