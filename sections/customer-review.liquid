{{ 'customer-review.css' | asset_url | stylesheet_tag }}
<div id="customer-review-slider" class="customer-review-wrapper product-slider">
  <div>
    {% if section.settings.heading %}<h1 class="customer-review--heading">{{ section.settings.heading }}</h1>{% endif %}
  </div>
  <div class="splide">
    <div class="splide__track">
      <ul class="splide__list">
        {% for block in section.blocks %}
          <li class="splide__slide customer-review-splide-item">
            <div class="customer-review--image-container">
              {% if block.settings.image_desktop %}
                {% render 'responsive-picture',
                  desktopImage: block.settings.image_desktop,
                %}
              {% endif %}  
            </div>
            <div class="customer-review-splide-item--name">
              {% if block.settings.name %}<p>{{ block.settings.name }}</p>{% endif %}
            </div>
            <div class="customer-review-splide-item--designation">
              {% if block.settings.designation %}<p>{{ block.settings.designation }}</p>{%  endif %}
            </div>
            {% if block.settings.description %}<div class="customer-review-splide-item--description">{{ block.settings.description }}</div>{% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
<script defer src="{{"https://cdn.jsdelivr.net/npm/@splidejs/splide/dist/js/splide.min.js"}}"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
      var splideInstance = new Splide('#customer-review-slider .splide', {
      type       : 'slide',
      perPage    : 3,
      autoplay   : false,
      interval   : 3000,
      gap        : 20,
      pagination : false,
      perMove    : 1,
      breakpoints: {
        780: {
          perPage: 1
        }
      }
    }).mount();
  });
</script>

{% schema %}
{
  "name": "customer-review section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Review"
    }
  ],
  "blocks": [
    {
      "type": "review-block",
      "name": "review-block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop image"
        },      
        {
           "type": "text",
           "id": "name",
           "label": "Name",
           "default": "Alex"
        },
        {
            "type": "text",
            "id": "designation",
            "label": "Designation",
            "default": "Designer"
        },
        {
           "type": "richtext",
           "id": "description",
           "label": "Description",
           "default": "<p>Business Formal Choices</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "customer-review Section"
    }
  ]
}
{% endschema %}
