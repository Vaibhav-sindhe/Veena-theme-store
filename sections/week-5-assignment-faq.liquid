<div class="assignment-faq">
    <h1>{{ section.settings.heading }}</h1>
    <div class="assignment-faq--container">
        {% for block in section.blocks %}
            <div class="assignment-faq-container--block">
                <details>
                    <summary>{{ block.settings.question }}</summary>
                    {{ block.settings.answer }}
                </details>
            </div>    
        {% endfor %}   

    </div>    
</div>    

{% schema %}
{
  "name": "assignment-faq section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FAQ"
    }    
  ],
  "blocks": [
    {
      "type": "assignment-faq-block",
      "name": "assignment-faq-block",
      "settings": [
        {
           "type": "text",
           "id": "question",
           "label": "question",
           "default": "Business Formal Choices"
          },
          {
           "type": "richtext",
           "id": "answer",
           "label": "answer",
           "default": "<p>Yes Business Formal Choices</p>"
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "assignment-faq section"
    }
  ]
}
{% endschema %}