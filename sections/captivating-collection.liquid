{{ "https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css" | stylesheet_tag }}
<script src={{ "https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"}} defer></script>

<div>Hello world</div>
<div id="slider" class="product-slider">
    <div class="splide">
      <div class="splide__track">
        <ul class="splide__list">
            {% for block in section.blocks %}
                {% assign collection = block.settings.collection %}
                <li class="splide__slide">
                    <div>
                        {% render 'responsive-picture',
                            desktopImage:  collection.images[0].src, 
                            mobileImage:  collection.images[0].src
                      
                        %}
                    </div>
                    <div>{{ block.settings.title }}</div>
                    <div>
                        <div><a class="button" href:{{block.settings.ul}}>{{ block.settings.button_label }}</a></div>
                    </div>
                </li>
            {% endfor %}
        </ul>
      </div>
    </div>

    <style>
        .product-slider {
          margin-top: 20px;
        }
      
        .product-slider .product {
          text-align: center;
        }
  
        .splide__slide{
          height: 200px;
        }
        .splide__slide img{
          object-fit: contain;
        }
      
      </style>
  </div>

<script defer src={{"https://cdn.jsdelivr.net/npm/@splidejs/splide/dist/js/splide.min.js"}}></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
      var splideInstance = new Splide('#slider .splide', {
        type       : 'slide',
        perPage    : 2, 
        autoplay   : true,
        interval   : 3000, 
        gap        : 20, // Gap between slides
        pagination : false,
        breakpoints: {
          768: {
            perPage: 2
          },
          480: {
            perPage: 1
          }
        }
      }).mount();
    });
  </script>

{% schema %}
{
  "name": "captivating section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "captivating-block",
      "name": "captivating-block",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title",
          "default": "fashion"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "captivating section"
    }
  ]
}
{% endschema %}

