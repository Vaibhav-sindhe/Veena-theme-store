<div>
  <h1>Hello world</h1>
  {% for block in section.blocks %}
    {{ block.settings.title }}
    {%- if block.settings.list != blank -%}
      <ul class="footer-block">
        {%- for link in block.settings.list.links -%}
          <li>
            <a
              href="{{ link.url }}"
              class="link link--text list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
            >
              {{ link.title }}
            </a>
          </li>
        {%- endfor -%}
      </ul>
    {% endif %}  
  {% endfor %}  
</div>  


{% schema %}
{
  "name": "custom Footer section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "image_picker",
        "id": "desktop_image",
        "label": "Store image"
    }
  ],
  "blocks": [
    {
      "type": "footer-block",
      "name": "Footer block",
      "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "placeholder": "Contact"
        },
        {
            "type": "link_list",
            "id": "list",
            "label": "options"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "custom Footer section"
    }
  ]
}
{% endschema %}