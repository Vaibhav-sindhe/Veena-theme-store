<div class="letyou_know">
    <div class="letyou_know--heading_container"><h1>{{ section.settings.heading }}</h1></div>
    {% for block in section.blocks %}
        <div class="letyou_know--inside">{{ block.heading }}</div>
    {% endfor %}
</div>    
{% schema %}
{
  "name": "letyou-know section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "blog",
      "name": "blog",
      "settings": [
        {
            "type": "blog",
            "label": "Blog ",
            "id": "blog"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "letyou-know  Section"
    }
  ]
}
{% endschema %}