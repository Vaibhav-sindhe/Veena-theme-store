{% schema %}
{
  "name": "letyou-know section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
        "type": "blog",
        "label": "Blog ",
        "id": "blog"
    },
    {
        "type": "checkbox",
        "id":"auto_play",
        "label":"Enable auto play",
        "default":false
    },
    {
        "type": "checkbox",
        "id":"show_pagination",
        "label":"Show dots",
        "default":false
    },
    {
        "type": "checkbox",
        "id":"show_arrows",
        "label":"Show arrows",
        "default":false
    },
    {
        "type": "range",
        "id": "auto_play_duration",
        "min": 1000,
        "max": 5000,
        "step": 1000,
        "unit": "sec",
        "label": "Autoplay duration",
        "default": 2000
    },
    {
        "type": "range",
        "id": "perpage",
        "min": 1,
        "max": 4,
        "step": 1,
        "label": "perpage",
        "default": 2
    },
    {
        "type": "range",
        "id": "gap",
        "min": 5,
        "max": 40,
        "step": 5,
        "label": "gap",
        "default": 5
    },
    {
        "type": "select",
        "id": "Slide_animation",
        "label": "Slide animation",
        "options": [
            {
                "value": "fade",
                "label": "Fade"
            },
            {
                "value": "slide",
                "label": "slide"
            },
            {
                "value": "loop",
                "label": "Loop"
            }
        ],
        "default": "slide"
    }
  ],
  "presets": [
    {
      "name": "letyou-know  Section"
    }
  ]
}
{% endschema %}
