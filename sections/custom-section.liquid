{% schema %}
{
  "name": "First section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop image",
      "info": "Recommended dimensions: 1440 x 600"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image",
      "info": "Recommended dimensions: 600 x 400"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Business Formal Choices"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Business Formal Choices</p>"
    },
    {
      "type": "text",
      "id": "button_lable",
      "label": "Button label",
      "default": "Explore Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button url"
    },
    {
      "type": "radio",
      "id": "image_position",
      "label": "Image position",
      "options": [
        { "value": "left", "label": "First Image" },
        { "value": "right", "label": "First Text" }
      ],
      "default": "left",
      "info": "Select image position"
    }
  ],
  "presets": [
    {
      "name": "First Section"
    }
  ]
}
{% endschema %}