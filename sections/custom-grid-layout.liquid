<div class="custom-grid page-width">
    <div class=custom-grid--left>
        {% render 'responsive-picture',
            desktopImage:section.settings.grid-image-1, 
        %}
        <div class="custom-grid-left-info-1 info">
            <p>{{ section.settings.preheading-1 }}</p>
            <h3>{{ section.settings.title-1 }}</h3>
            <p>{{ section.settings.description-1 }}</p>
            <a href="/collections" class="button">{{ section.settings.button-label-1 }}</a>
        </div>    
    </div>
    <div class=custom-grid--right>
        <div class="custom-grid-right--top">
            {% render 'responsive-picture',
                desktopImage:section.settings.grid-image-2, 
            %}
            <div class="custom-grid-right-top-info-2 info">
                <p>{{ section.settings.preheading-2 }}</p>
                <h3>{{ section.settings.title-2 }}</h3>
                <p>{{ section.settings.description-2 }}</p>
                <a href="/collections" class="button">{{ section.settings.button-label-2 }}</a>
            </div>    
        </div>
        <div class="custom-grid-right--bottom">
            <div class="custom-grid-right-bottom--left">
                {% render 'responsive-picture',
                    desktopImage:section.settings.grid-image-3,  
                %}
            </div> 
            <div class="custom-grid-right-bottom--right">
                {% render 'responsive-picture',
                    desktopImage:section.settings.grid-image-4, 
                %}
            </div> 
        </div>
    </div>    
</div>    
<style>
    .custom-grid{
        width:100%;
        display:flex;
        gap:1rem;
    }
    .custom-grid--left,.custom-grid--right{
        width:50%;
    }
    .custom-grid--left picture img ,.custom-grid--right div picture img{
        width:100%;
        object-fit:cover;
        border-radius:20px;
    }
    .custom-grid--left , .custom-grid-right--top{
        position:relative;
    }


    .custom-grid p{
        margin:0
    }
 


    .custom-grid .info{
        width:100%;
        height:100%;
        position:absolute;
        color:white;
        top:0;
        display:flex;
        padding:4rem;
    }
    .custom-grid .custom-grid-left-info-1{
        flex-direction:column;
        align-items:flex-start;
        justify-content:flex-end;
    }
    .custom-grid .custom-grid-right-top-info-2{
        flex-direction:column;
        align-items:flex-start;
        justify-content:center;
    }
    .custom-grid--right{
        display:flex;
        flex-direction:column;
    }
    .custom-grid-right--bottom{
        display:flex;
        gap:1rem

    }
</style>    
