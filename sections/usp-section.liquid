{{ 'usp-section.css' | asset_url | stylesheet_tag }}
<div class="usp-section">
  <ul class="usp-section--container">
    {% for block in section.blocks %}
      <li class="usp-section--block">
        {% render 'responsive-picture',
          desktopImage: block.settings.image_desktop,
          class:"usp-section--image-wrapper image"
        %}
        <div class="usp-section--block-heading">
          <h3>{{ block.settings.heading }}</h3>
        </div>
        <div class="usp-section--block-description">
          <p>{{ block.settings.description }}</p>
        </div>
        {% if block.settings.button_label != blank %}
          <div class="usp-section--block-button">
            <a class="button" href="{{ block.settings.button_link }}">{{ block.settings.button_label }}</a>
          </div>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "usp section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Business Formal Choices"
    }
  ],
  "blocks": [
    {
      "type": "usp-block",
      "name": "usp-block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop image",
          "info": "Recommended dimensions: 1440 x 600"
        },
        
        {
           "type": "text",
           "id": "heading",
           "label": "Heading",
           "default": "Business Formal Choices"
          },
          {
           "type": "richtext",
           "id": "description",
           "label": "Description",
           "default": "<p>Business Formal Choices</p>"
          },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Explore"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "usp Section"
    }
  ]
}
{% endschema %}
